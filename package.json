{
  "name": "reboot-ui",
  "version": "0.0.2",
  "description": "one UI library based on bootstrap 4, driven by (p)react",
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "pkg:build": "cross-env NODE_ENV=production rollup -c rollup.packages.config.js",
    "pkg:test": "npm run pkg:build && npm run test",
    "update-src": "node ./scripts/fresh-components.js",
    "dev-build": "cross-env NODE_ENV=developement rollup -c",
    "watch": "cross-env ROLLUP_WATCH=true rollup -c -w",
    "prepublishOnly": "npm run pkg:build && npm run test",
    "dev": "npm-run-all --parallel start watch",
    "test": "jest",
    "start": "serve .",
    "deploy:github": "npm run build && git add -A && git commit -m'chore: deploy doc github page' && git push"
  },
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "browser": "./dist/index.js",
